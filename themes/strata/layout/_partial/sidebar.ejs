<div id="sidebar">
    <div class="inner">
        <section id="sidebar-header">
            <a href="/" class="site-title">
                <h1><%= config.title %></h1>
            </a>
            <p class="site-subtitle"><%= config.subtitle %></p>
        </section>

        <nav id="nav">
            <ul>
                <% for (let item in config.menu) { %>
                    <li>
                        <a href="<%- url_for(config.menu[item]) %>"><%= item %></a>
                    </li>
                <% } %>
            </ul>
        </nav>

        <section id="social">
            <ul class="icons">
                <% if (config.social) { %>
                    <% config.social.forEach(function(link) { %>
                        <li>
                            <a href="<%= link.url %>" class="icon" target="_blank" rel="noopener">
                                <i class="<%= link.icon %>"></i>
                                <span class="label"><%= link.label %></span>
                            </a>
                        </li>
                    <% }); %>
                <% } %>
            </ul>
        </section>

        <section id="footer">
            <p class="copyright">
                &copy; <%= new Date().getFullYear() %> <%= config.author %>. All rights reserved.
            </p>
        </section>
    </div>
</div>
