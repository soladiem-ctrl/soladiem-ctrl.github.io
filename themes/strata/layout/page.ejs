<%- partial('_partial/header') %>

<div id="main">
    <article class="page">
        <header>
            <h1><%= page.title %></h1>
        </header>

        <% if (page.cover) { %>
            <span class="image main">
                <img src="<%- url_for(page.cover) %>" alt="<%= page.title %>" />
            </span>
        <% } %>

        <div class="content">
            <%- page.content %>
        </div>
    </article>
</div>

<%- partial('_partial/footer') %>
